              //  .site-form__col.site-form__col--50.site-form__col--sm-100
              //    .site-form__form-input
              //      input(type='text' placeholder='Player 1 First Name').site-form__input
              //  .site-form__col.site-form__col--50.site-form__col--sm-100
              //    .site-form__form-input
              //      input(type='text' placeholder='Player 1 Last Name').site-form__input
              //  .site-form__col.site-form__col--50.site-form__col--sm-100
              //    .site-form__form-input
              //      input(type='text' placeholder='Player 1 Email').site-form__input
              //  .site-form__col.site-form__col--50.site-form__col--sm-100

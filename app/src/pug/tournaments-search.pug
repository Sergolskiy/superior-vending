extends ./templates/_layout

block vars
  - var pageTitle = "Tournaments";
  - var pageClass = "tournaments-search-page";
  - var pageActive = "tournaments-search-page";

block content
  div.main-wrap

    .breadcrumbs
      .breadcrumbs__inner.site-block-inner
        .breadcrumbs__items
          .breadcrumbs__item
            a(href='#').breadcrumbs__link Home Page
          .breadcrumbs__item
            a(href='#').breadcrumbs__link Tournaments

    section.event-top
      .event-top__inner.site-block-inner
        .event-top__main
          h1.event-top__title Tournaments
          .event-top__row
            .event-top__col
              .event-top__field-title Choose the type of League
              .form-select-container
                select(data-placeholder="Select").form-select-alt.alt-select
                  option(value='1') Pool
                  option(value='2') Darts

        .event-top__sublist
          .sublist
            a(href='#').sublist__item.site-btn
              .sublist__item-icon
                include ../img/register-icon.svg
              .sublist__item-text Registration
            a(href="#").sublist__item.site-btn
              .sublist__item-icon
                include ../img/calendar-icon.svg
              .sublist__item-text Calendar of Events
